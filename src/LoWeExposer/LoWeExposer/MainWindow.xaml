<Window x:Class="LoWeExposer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoWeExposer"
        mc:Ignorable="d"
        Title="Linux on Windows extender Exposer" Height="360" Width="640">
    <StackPanel>
        <Button x:Name="btnFrameBuffer" Click="btnFrameBuffer_Click">Framebuffer</Button>
        <Button x:Name="btnALSA" Click="btnALSA_Click">ALSA</Button>
        <Button x:Name="btnMice" Click="btnMice_Click">Mouse support</Button>
        <Button x:Name="btnKbd" Click="btnKbd_Click">Keyboard support</Button>
    </StackPanel>
</Window>
