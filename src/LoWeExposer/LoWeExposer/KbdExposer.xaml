<Window x:Class="LoWeExposer.KbdExposer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoWeExposer"
        mc:Ignorable="d"
        Title="Keyboard Exposer" Height="300" Width="300"
        Loaded="KbdExposer_Loaded"
        Closing="KbdExposer_OnClosing">
    <Grid>
        <TextBox TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" x:Name="textBox" IsReadOnly="True" />
    </Grid>
</Window>
